{
  "name": "color-bridge",
  "version": "1.0.0",
  "author": "Alec Lloyd Probert",
  "type": "module",
  "private": false,
  "description": "A tool to generate region-specific color palettes, based on cultural contexts",
  "keywords": [
    "color",
    "palette",
    "tool",
    "culture",
    "translation",
    "color translation"
  ],
  "homepage": "https://color-bridge.graphieros.com/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/graphieros/color-bridge.git"
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "main": "./dist/color-bridge.umd.cjs",
  "module": "./dist/color-bridge.js",
  "scripts": {
    "dev": "vite",
    "build": "vitest run --coverage && tsc && vite build",
    "preview": "vite preview",
    "test": "vitest"
  },
  "exports": {
    ".": {
      "import": "./dist/color-bridge.js",
      "require": "./dist/color-bridge.umd.cjs"
    }
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.0.3",
    "typescript": "^5.7.3",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.0.3"
  }
}
