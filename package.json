{
  "name": "color-bridge",
  "version": "0.1.0",
  "author": "Alec Lloyd Probert",
  "type": "module",
  "private": false,
  "description": "A tool to generate region-specific color palettes, based on cultural contexts",
  "keywords": [
    "color",
    "palette",
    "tool",
    "culture",
    "translation",
    "color translation"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/my-lib.umd.cjs",
  "module": "./dist/my-lib.js",
  "scripts": {
    "dev": "vite",
    "build": "vitest run --coverage && tsc && vite build",
    "preview": "vite preview",
    "test": "vitest"
  },
  "exports": {
    ".": {
      "import": "./dist/my-lib.js",
      "require": "./dist/my-lib.umd.cjs"
    }
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.0.3",
    "typescript": "^5.7.3",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.0.3"
  }
}
